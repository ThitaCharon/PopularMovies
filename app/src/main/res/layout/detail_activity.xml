<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_detaitActivity_posterimage"
            android:layout_width="match_parent"
            android:layout_height="520sp"
            android:layout_alignParentTop="true"
            android:paddingBottom="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_detaitActivity_Title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_TITLE"
            style="@style/Header"/>
        <TextView
            android:id="@+id/tv_detaitActivity_Title"
            android:layout_toRightOf="@id/tv_detaitActivity_Title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_TITLE"
            style="@style/Info"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_detaitActivity_Rating_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_RATING"
            style="@style/Header"/>
        <TextView
            android:id="@+id/tv_detaitActivity_Rating"
            android:layout_toRightOf="@id/tv_detaitActivity_Rating_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_RATING"
            style="@style/Info"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_detaitActivity_DateRelease_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_DATERELEASE"
            style="@style/Header"/>
        <TextView
            android:id="@+id/tv_detaitActivity_DateRelease"
            android:layout_toRightOf="@id/tv_detaitActivity_DateRelease_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_DATERELEASE"
            style="@style/Info"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_detaitActivity_desc_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/INFO_DESCRIPTION"
            style="@style/Header"/>
        <TextView
            android:id="@+id/tv_detaitActivity_desc"
            android:layout_toEndOf="@id/tv_detaitActivity_desc_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INFO_DESCRIPTION"
            style="@style/Info"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>